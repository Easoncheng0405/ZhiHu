<RelativeLayout
        android:background="@color/colorTinyGray"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.QuestionActivity">
    <LinearLayout
            android:id="@+id/action_bar"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorWhite">
        <ImageView
                android:layout_marginEnd="5dp"
                android:layout_weight="2"
                android:layout_marginTop="10dp"
                android:src="@drawable/left_black"
                android:layout_width="0dp"
                android:layout_height="20dp"/>
        <RelativeLayout
                android:paddingLeft="15dp"
                android:layout_marginTop="5dp"
                android:paddingRight="15dp"
                android:layout_weight="21"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="@drawable/search_box_shape">

            <ImageView
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@id/search_txt"
                    android:src="@drawable/search"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/search_txt"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="搜索知乎内容"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
        </RelativeLayout>

        <ImageView
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:src="@drawable/more_black"
                android:layout_width="0dp"
                android:layout_height="20dp"/>
    </LinearLayout>
    <View
            android:layout_below="@id/action_bar"
            android:background="@color/colorLightGray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    <ScrollView
            android:layout_below="@id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
